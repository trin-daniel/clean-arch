{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@domain/*":["domain/*"],
      "@presentation/*":["presentation/*"],
      "@data/*":["data/*"],
      "@infra/*":["infra/*"],
      "@validation/*":["validation/*"],
      "@main/*":["main/*"]
    }
  },
  "include": [
    "src"
  ]
}